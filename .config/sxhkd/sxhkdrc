#
# wm independent hotkeys
#

# terminal emulator
super + t
    urxvt

# browser
super + w
    chromium

# file manager
super + f
    pcmanfm

# program launcher
super + r
    rofi -show run

alt + Tab
    rofi -show window

# sound script
ctrl + shift + h
    ~/.scripts/sound.sh headset
ctrl + shift + l
    ~/.scripts/sound.sh speakers

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# lock the screen
ctrl + alt + l
    ~/.scripts/lock.sh

# volume
XF86Audio{Raise,Lower}Volume
    amixer -D pulse sset Master 5%{+,-}

# brightness
XF86MonBrightness{Up,Down}
    xbacklight -{inc,dec} 10

# shutdown
control + super + q
    zenity --question --text="Shutdown?" && shutdown now

# standby
control + super + s
    zenity --question --text="Standby?" && systemctl suspend && ~/.scripts/lock.sh

# shutdown NAS + PC
control + super + shift + q
	ssh -i ~/.ssh/rsync/id_rsa root@192.168.1.2 shutdown now; shutdown now

# reboot
control + super + r
    zenity --question --text="Reboot?" && shutdown -r now

# go into windows
control + super + w
    zenity --question --text="Go into Windows?" && sudo grub-reboot Windows && reboot

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
    bspc quit

# restart bspwm
super + alt + r
    bspc quit; bspwm & sleep 1 && bspc wm --adopt-orphans

# close and kill
alt + F4
    bspc node --close

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
    bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
    bspc node -s biggest

#
# state/flags
#

# set the window state
super + shift + {t,p,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
    bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus/swap the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# flip layout vertically
super + shift + g
    bspc node @/ -R 180

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
    bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + shift + {minus,plus}
    bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# send to the given desktop
super + shift + {1-9}
    id=$(bspc query -N -n); \
    bspc node -d '^{1-9}'; \
    bspc node -f ${id}

# focus given desktop
super + ctrl + {1-9}
    bspc desktop -f '^{1-9}'

# insert receptacle, or clear receptacles on current desktop
super + {alt,shift} + i
    insert={true,false}; \
    $insert && bspc node -i || \
    for win in `bspc query -N -n .leaf.!window`; do bspc node $win -k ; done;

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + alt + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
    bspc node -z {left -5 0,bottom 0 5,top 0 -5,right 5 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
    bspc node -z {right -5 0,top 0 5,bottom 0 -5,left 5 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-5 0,0 5,0 -5,5 0}
